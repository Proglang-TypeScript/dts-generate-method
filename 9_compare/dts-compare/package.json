{
  "name": "dts-compare",
  "version": "1.3.1",
  "description": "Compares and parses typescript declaration files",
  "bin": {
    "dts-count": "dist/parseSimple.js",
    "dts-compare": "dist/index.js",
    "dts-parse": "dist/parse.js"
  },
  "scripts": {
    "compare": "npm run build && node dist/index.js",
    "parse": "npm run build && node dist/parse.js",
    "count": "npm run build && node dist/parseSimple.js",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "test": "npm run test:clear-cache && jest",
    "test:clear-cache": "jest --clearCache",
    "lint": "eslint --max-warnings 0 'src/**/*.ts'",
    "prettier": "prettier --write 'src/**/*.ts'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run lint"
    }
  },
  "author": "f-cristiani",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/proglang/dts-generate-method.git"
  },
  "dependencies": {
    "command-line-args": "^5.2.1",
    "eslint-config-prettier": "^8.5.0",
    "object-hash": "^3.0.0",
    "typescript": "^3.9.10"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.2.0",
    "@types/jest": "^25.2.3",
    "@types/node": "^13.13.52",
    "@types/object-hash": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^8.27.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^4.3.8",
    "jest": "^25.2.3",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^25.5.1"
  }
}
